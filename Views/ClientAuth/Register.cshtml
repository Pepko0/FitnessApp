@model RegisterClientViewModel

@{
    ViewData["Title"] = "Rejestracja klienta";
}

<div class="container mt-5" style="max-width: 520px;">
    <h2 class="mb-1">Rejestracja</h2>
    <div class="text-muted mb-3">Załóż konto klienta</div>

    <form asp-controller="ClientAuth" asp-action="Register" method="post">
        @Html.AntiForgeryToken()

        <div class="form-group mb-2">
            <label asp-for="FirstName" class="form-label">Imię</label>
            <input asp-for="FirstName" class="form-control" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>

        <div class="form-group mb-2">
            <label asp-for="LastName" class="form-label">Nazwisko</label>
            <input asp-for="LastName" class="form-control" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>

        <div class="form-group mb-2">
            <label asp-for="Email" class="form-label">Email</label>
            <input asp-for="Email" class="form-control" type="email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group mb-2">
            <label asp-for="Password" class="form-label">Hasło</label>
            <input asp-for="Password" class="form-control" type="password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="ConfirmPassword" class="form-label">Powtórz hasło</label>
            <input asp-for="ConfirmPassword" class="form-control" type="password" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary w-100">
            Zarejestruj się
        </button>
    </form>

    <div class="text-center mt-3">
        Masz już konto?
        <a href="/client/login">Zaloguj się</a>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
