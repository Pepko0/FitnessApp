@model FitnessApp.Models.ViewModels.OperatorsViewModel

@{
    ViewData["Title"] = "Zarządzanie → Operatorzy";
}

<h1 class="mb-3">Zarządzanie: Operatorzy (pracownicy)</h1>

@if (TempData["Error"] is string err)
{
    <div class="alert alert-danger">@err</div>
}
@if (TempData["Success"] is string ok)
{
    <div class="alert alert-success">@ok</div>
}

<div class="mb-3 text-end">
    <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addOperatorModal">
        Dodaj nowego operatora
    </button>
</div>

@await Html.PartialAsync("~/Views/Shared/Components/Operators/_OperatorsTable.cshtml", Model.Operators)
@await Html.PartialAsync("~/Views/Shared/Components/Operators/_AddOperatorModal.cshtml", Model.Roles)


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
