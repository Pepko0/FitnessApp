@model FitnessApp.Models.ViewModels.DeleteModalViewModel

<div class="modal fade" id="@Model.ModalId" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">

      <form method="post" id="@Model.FormId">
        @Html.AntiForgeryToken()

        <div class="modal-header">
          <h5 class="modal-title">@Model.Title</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>

        <div class="modal-body">
          @Model.QuestionText 
          <strong id="@Model.ItemNameId"></strong>?
        </div>

        <div class="modal-footer">
          <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Anuluj</button>
          <button type="submit" class="btn btn-danger">Usu≈Ñ</button>
        </div>
      </form>

    </div>
  </div>
</div>

<script>
document.addEventListener("DOMContentLoaded", () => {
    const modal = document.getElementById("@Model.ModalId");

    modal.addEventListener("show.bs.modal", event => {
        const btn = event.relatedTarget;

        const id = btn.getAttribute("data-id");
        const name = btn.getAttribute("data-name");

        document.getElementById("@Model.ItemNameId").textContent = name;

        const form = document.getElementById("@Model.FormId");
        form.action = `@Model.DeleteUrlBase/${id}`;
    });
});
</script>
